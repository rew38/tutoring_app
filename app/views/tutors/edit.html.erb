 -->

 <%= form_for(@tutor) do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>
  <%= f.label(:email) %>
  <%= f.text_field(:email) %>
  <%= f.label(:phone_number) %>
  <%= f.text_field(:phone_number) %>
  <%= f.fields_for :tutor_profile, @tutor.build_tutor_profile do |s| %>
    <%= s.label :hometown %>
    <%= s.text_field :hometown %>
    <%= s.label :tutors_school %>
    <%= s.text_field :tutors_school %>
    <%= s.label :tutors_course %>
    <%= s.text_field :tutors_course %>
  <% end %>

  <%= f.label(:password) %>
  <%= f.password_field(:password) %>
  <%= f.label(:password_confirmation) %>
  <%= f.password_field(:password_confirmation) %>
  <%= f.submit %>
<% end %>
