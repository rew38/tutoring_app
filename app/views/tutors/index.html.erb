<!-- tutors.index.html.erb -->


<% if tutor_logged_in? %>

  <h1>Welcome <%= current_tutor.name %></h1>
    <%= link_to "Home", root_path %>
<br>
<br>
    <%= link_to "Edit Tutor Profile", edit_tutor_path(current_tutor) %>
<br>
      <%= link_to "View Tutor Profile", tutor_path(current_tutor) %>
<br>
      <%= link_to "Delete my Account", tutor_path(current_tutor), method: :delete, confirm: "Are you sure?" %>


  <% else %>

<% if student_logged_in? %>
  <%= link_to "Back", students_path %>
 <% else %>
  <%= link_to "Home", root_path %>
<% end %>
<br>


    <ul>
    <% @tutors.each do |tutor| %>
        <li><br><strong>Name:</strong> <%= tutor.name%>, <strong>Email:</strong> <%= tutor.email %>, <strong>Phone:</strong> <%= tutor.phone_number %></li>
    <% end %>
    </ul>

 <% end %>
