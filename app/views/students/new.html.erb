<!-- student.new.html.erb -->

<!-- accessed from homepage, student signup -->

<h2>Student </h2>
<h4>Registration </h4>
<%= link_to "Back", root_path %>

<br>
<br>
<%= form_for(@student) do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>
  <%= f.label(:email) %>
  <%= f.text_field(:email) %>
  <%= f.label(:phone_number) %>
  <%= f.text_field(:phone_number) %>
  <%= f.fields_for :student_profile, @student.build_student_profile do |s| %>
    <%= s.label :students_school%>
    <%= s.text_field :students_school %>
    <%= s.label :class_of %>
    <%= s.text_field :class_of %>
  <% end %>

  <%= f.label(:password) %>
  <%= f.password_field(:password) %>
  <%= f.label(:password_confirmation) %>
  <%= f.password_field(:password_confirmation) %>
  <%= f.submit %>
<% end %>


